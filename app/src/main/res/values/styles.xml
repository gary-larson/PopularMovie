<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AboutText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/layout_padding</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="DetailText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingTop">@dimen/detail_small_padding</item>
        <item name="android:paddingLeft">@dimen/detail_normal_padding</item>
        <item name="android:paddingStart">@dimen/detail_normal_padding</item>
        <item name="android:paddingRight">@dimen/detail_normal_padding</item>
        <item name="android:paddingEnd">@dimen/detail_normal_padding</item>
        <item name="android:textSize">@dimen/detail_text_size</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="DetailTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/detail_normal_padding</item>
        <item name="android:paddingLeft">@dimen/detail_normal_padding</item>
        <item name="android:paddingStart">@dimen/detail_normal_padding</item>
        <item name="android:paddingRight">@dimen/detail_normal_padding</item>
        <item name="android:paddingEnd">@dimen/detail_normal_padding</item>
        <item name="android:textSize">@dimen/detail_subtitle_text_size</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>


</resources>
